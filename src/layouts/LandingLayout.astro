---
import BaseLayout from "./BaseLayout.astro";
import { getCollection } from "astro:content";
import { IconInfinity, IconPalette, IconSparkles } from "@tabler/icons-react";
import { marked } from "marked";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  heroTitle?: string;
  heroSubtitle?: string;
  heroCtaText?: string;
  heroCtaUrl?: string;
  showStoreInfo?: boolean;
  className?: string;
}

// Get store data for dynamic content
const storeData = await getCollection("store");
const store = storeData[0]?.data || {};
const storeName = store.title || "Markkët Space";
const storeDescription =
  store.Description || "The hub to launch, grow, and thrive";
const parsedDescription = marked.parse(storeDescription);

const {
  title = store.SEO?.metaTitle || `${storeName} - Create Your Store`,
  description = store.SEO?.metaDescription || storeDescription,
  image = store.SEO?.socialImage?.formats?.large?.url ||
    store.SEO?.socialImage?.url ||
    "/favicon.svg",
  heroTitle = storeName,
  heroCtaText = "Featured Stores",
  heroCtaUrl = "https://de.markket.place/stores",
  showStoreInfo = true,
  className = "",
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  siteName={storeName}
  className={className}
  favicon={store?.Favicon?.url}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: storeName,
    description: storeDescription,
    url: Astro.site,
    publisher: {
      "@type": "Organization",
      name: "Markkët Space",
      logo: {
        "@type": "ImageObject",
        url: new URL("/favicon.svg", Astro.site),
      },
    },
    potentialAction: {
      "@type": "SearchAction",
      target: {
        "@type": "EntryPoint",
        urlTemplate: `${heroCtaUrl}?q={search_term_string}`,
      },
      "query-input": "required name=search_term_string",
    },
  }}
>
  <!-- Custom header for landing pages -->
  <header class="landing-header" slot="header">
    <div class="container">
      <nav class="main-nav">
        <a href="/" class="logo">
          {storeName}
        </a>
        <div class="nav-links">
          {
            ["about", "blog", "products"].map((link) => {
              return (
                <a
                  href={`/${link}`}
                  class={`nav-link ${Astro.url.pathname?.includes(link) ? "current" : ""}`}
                >
                  {link.charAt(0).toUpperCase() + link.slice(1)}
                </a>
              );
            })
          }
          <a
            href="https://de.markket.place/auth/magic"
            class="nav-button"
            target="_blank"
          >
            Get Started
          </a>
        </div>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">✨ Made by creators, for creators</div>
        <h1 class="hero-title">Turn your passion into profit</h1>
        <p class="hero-subtitle">
          Launch your professional online store in minutes. Sell digital
          downloads, physical products, subscriptions, and services with our
          creator-focused ecommerce platform.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <div class="stat-number">Free</div>
            <div class="stat-label">to start selling</div>
          </div>
          <div class="stat">
            <div class="stat-number">5min</div>
            <div class="stat-label">setup time</div>
          </div>
          <div class="stat">
            <div class="stat-number">
              <IconInfinity size={48} client:load />
            </div>
            <div class="stat-label">possibilities</div>
          </div>
        </div>
        <div class="hero-actions">
          <a
            href="https://de.markket.place/auth/magic"
            class="cta-primary"
            target="_blank"
          >
            Start Your Store Free →
          </a>
          <a href={heroCtaUrl} class="cta-secondary" target="_blank">
            {heroCtaText}
          </a>
        </div>
        <div class="hero-community">
          <p>
            <IconPalette size={16} client:load /> Join 100+ creators •
            <IconSparkles size={16} client:load /> Shape the future together
          </p>
        </div>
      </div>
      {
        store.Cover && (
          <div class="hero-image">
            <div class="img-frame">
              <img
                src={
                  (store.Cover as any).formats?.large?.url || store.Cover.url
                }
                alt={store.Cover.alternativeText || "Store showcase"}
                loading="eager"
              />
            </div>
          </div>
        )
      }
    </div>
  </section>

  <!-- Main Content Slot -->
  <slot />

  <!-- Store Info Section (optional) -->
  {
    showStoreInfo && (
      <section class="store-info-section">
        <div class="container">
          <div class="store-content">
            <div class="store-details">
              <h2>About {storeName}</h2>
              <div set:html={parsedDescription} />
            </div>
            {store.Logo && (
              <div class="store-logo">
                <img
                  src={
                    (store.Logo as any).formats?.medium?.url || store.Logo.url
                  }
                  alt={store.Logo.alternativeText || "Store logo"}
                />
              </div>
            )}
          </div>
        </div>
      </section>
    )
  }

  <section class="final-cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Start Selling?</h2>
        <p>
          Join thousands of creators who have already launched their stores with
          our platform. Get started in minutes, not hours.
        </p>
        <div class="cta-actions">
          <a
            href="https://de.markket.place/auth/magic"
            class="cta-primary large"
            target="_blank"
          >
            Get Started for Free
          </a>
          <a href="/blog" class="cta-secondary">Blog</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Landing Header */
  .landing-header {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  /* Navigation */
  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .logo:hover {
    color: var(--primary-dark);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link:link {
    color: black;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--primary);
  }

  .nav-button {
    background: var(--primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.3s ease;
  }

  .nav-button:hover {
    background: var(--primary-dark);
  }

  .hero-community p {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Hero Section */
  .hero-section {
    padding: 6rem 0 8rem;
    background: var(--bg-gradient);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 30% 20%,
      rgba(255, 255, 255, 0.3) 0%,
      transparent 50%
    );
    pointer-events: none;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-badge {
    background: rgba(255, 255, 255, 0.2);
    color: var(--text-light);
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--text-light);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .hero-subtitle {
    font-size: 1.4rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3rem;
    line-height: 1.6;
    max-width: 600px;
  }

  .hero-stats {
    display: flex;
    gap: 3rem;
    margin-bottom: 3rem;
    justify-content: center;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text-light);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-community {
    margin-top: 2rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 500px;
    height: 400px;
    object-fit: cover;
    border-radius: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    animation: fadeInScale 1.2s ease-out 0.3s both;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .hero-image img:hover {
    transform: translateY(-10px) scale(1.02);
  }

  /* CTA Buttons */
  .cta-primary {
    background: rgba(255, 255, 255, 0.95);
    color: var(--primary);
    padding: 1.25rem 2.5rem;
    border-radius: var(--radius-lg);
    font-size: 1.125rem;
    font-weight: 700;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .cta-primary:hover {
    background: white;
    color: var(--primary-dark);
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(255, 107, 157, 0.4);
  }

  .cta-primary.large {
    padding: 1.5rem 3rem;
    font-size: 1.25rem;
  }

  .cta-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 1.25rem 2.5rem;
    border-radius: var(--radius-lg);
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .cta-secondary:hover {
    background: rgba(255, 255, 255, 0.7);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    color: var(--primary-dark);
  }

  .cta-outline {
    background: transparent;
    color: var(--primary);
    border: 2px solid var(--primary);
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
  }

  .cta-outline:hover {
    background: var(--primary);
    color: white;
  }

  /* Store Info Section */
  .store-info-section {
    padding: 4rem 0;
    background: var(--bg-alt);
  }

  .store-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .store-details h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text);
  }

  .store-details p {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .store-logo {
    text-align: center;
  }

  .store-logo img {
    width: 100%;
    max-width: 300px;
    height: 300px;
    object-fit: contain;
    border-radius: 1rem;
    background: white;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  /* Final CTA Section */
  .final-cta-section {
    padding: 4rem 0;
    background: var(--primary);
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .final-cta-section .cta-primary {
    background: white;
    color: var(--primary);
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
  }

  .final-cta-section .cta-primary:hover {
    transform: translateY(-2px);
  }

  .final-cta-section .cta-secondary {
    border-color: rgba(255, 255, 255, 0.3);
    color: white;
  }

  .final-cta-section .cta-secondary:hover {
    border-color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-actions {
      justify-content: center;
    }

    .store-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .store-details h2,
    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-actions {
      justify-content: center;
    }
  }
</style>
