---
import { getCollection } from "astro:content";
import LandingLayout from "../layouts/LandingLayout.astro";
import BlocksContent from "../components/BlocksContent.astro";
import {
  IconPalette,
  IconCoin,
  IconUsers,
  IconDeviceMobile,
  IconCode,
} from "@tabler/icons-react";
import {
  IconPhoto,
  IconBook,
  IconMusic,
  IconPencil,
  IconCamera,
  IconMask,
  IconArrowRight,
  IconKey,
} from "@tabler/icons-react";

const pages = await getCollection("pages");
const homePage = pages.find((p) => p.data.slug == "home")?.data;

// Get store data for dynamic content
const storeData = await getCollection("store");
const store = storeData[0]?.data || {};
const storeName = store.title || "MarkkÃ«t Space";
const storeUrls = store.URLS || {};
const storeUrl =
  storeUrls.site || "https://de.markket.place/store/next/showcase";
const storeCover = store.Cover;
---

<LandingLayout
  title={homePage?.SEO?.metaTitle || store.SEO?.metaTitle}
  description={homePage?.SEO?.metaDescription || store.SEO?.metaDescription}
  image={homePage?.SEO?.socialImage?.formats?.large?.url ||
    homePage?.SEO?.socialImage?.url ||
    storeCover?.url}
  heroCtaText="Browse Templates"
  heroCtaUrl={storeUrl}
  heroTitle={homePage?.Title}
>
  <!-- Features Section -->
  <section class="features-section">
    <div class="container">
      <div class="section-header">
        <h2>Everything you need to succeed</h2>
        <p>
          Professional tools designed specifically for creators. From digital
          artists to course creators, we've built the platform that understands
          your unique needs.
        </p>
      </div>
      <div class="features-grid">
        <div class="feature-card featured">
          <div class="feature-icon">
            <IconPalette size={32} client:load />
          </div>
          <h3>Creator-Focused Templates</h3>
          <p>
            Beautiful, customizable designs built specifically for artists,
            designers, and content creators
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <IconCoin size={32} client:load />
          </div>
          <h3>Zero Startup Costs</h3>
          <p>
            Start selling immediately with no upfront fees. Only pay when you
            make sales.
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <IconUsers size={32} client:load />
          </div>
          <h3>Growing Community</h3>
          <p>
            Join a supportive community of creators helping each other succeed
          </p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <IconKey size={32} client:load />
          </div>
          <h3>Secure Authentication</h3>
          <p>Magic link login - no passwords needed, just your email</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <IconDeviceMobile size={32} client:load />
          </div>
          <h3>Mobile Optimized</h3>
          <p>Manage your store on the go with our mobile-friendly dashboard</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <IconCode size={32} client:load />
          </div>
          <h3>Flexible Content</h3>
          <p>
            Create blogs, product pages, collections, and custom content with
            ease
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="social-proof-section">
    <div class="container">
      <div class="social-proof-content">
        <h3>Perfect for every type of creator</h3>
        <div class="creator-types">
          <div class="creator-type">
            <div class="creator-icon">
              <IconPhoto size={24} client:load />
            </div>
            <span>Digital Artists</span>
          </div>
          <div class="creator-type">
            <div class="creator-icon">
              <IconBook size={24} client:load />
            </div>
            <span>Course Creators</span>
          </div>
          <div class="creator-type">
            <div class="creator-icon">
              <IconMusic size={24} client:load />
            </div>
            <span>Musicians</span>
          </div>
          <div class="creator-type">
            <div class="creator-icon">
              <IconPencil size={24} client:load />
            </div>
            <span>Writers</span>
          </div>
          <div class="creator-type">
            <div class="creator-icon">
              <IconCamera size={24} client:load />
            </div>
            <span>Photographers</span>
          </div>
          <div class="creator-type">
            <div class="creator-icon">
              <IconMask size={24} client:load />
            </div>
            <span>Performers</span>
          </div>
        </div>
        <div class="social-proof-cta">
          <p>
            Join hundreds of creators already building their online presence
          </p>
          <a
            href="https://de.markket.place/auth/magic"
            class="cta-primary"
            target="_blank"
          >
            Start Your Store Free <IconArrowRight size={20} client:load />
          </a>
          {
            storeUrl &&
              storeUrl !== "https://de.markket.place/store/next/showcase" && (
                <a
                  href={storeUrl}
                  class="cta-secondary"
                  target="_blank"
                  style="margin-left: 1rem;"
                >
                  Visit {storeName} <IconArrowRight size={20} client:load />
                </a>
              )
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Page Content from Strapi -->
  {
    homePage?.Content && homePage.Content.length > 0 && (
      <section class="page-content-section">
        <div class="container">
          <BlocksContent content={homePage.Content} className="page-content" />
        </div>
      </section>
    )
  }
</LandingLayout>

<style>
  /* Features Section */
  .features-section {
    padding: 6rem 0;
    background: var(--bg-alt);
    position: relative;
    overflow: hidden;
  }

  .features-section::before {
    content: "";
    position: absolute;
    top: 0;
    right: -20%;
    width: 40%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(255, 107, 157, 0.05) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: 1rem;
    background: var(--bg-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-header p {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: var(--bg);
    padding: 2.5rem;
    border-radius: var(--radius-lg);
    text-align: center;
    border: 1px solid var(--border-light);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .feature-card.featured {
    background: var(--bg-gradient);
    color: var(--text-light);
    transform: scale(1.05);
  }

  .feature-card.featured .feature-icon {
    background: rgba(255, 255, 255, 0.2);
  }

  .feature-card.featured h3 {
    color: var(--text-light);
  }

  .feature-card.featured p {
    color: rgba(255, 255, 255, 0.9);
  }

  .feature-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--bg-gradient);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .feature-card:not(.featured):hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .feature-card:not(.featured):hover::before {
    transform: scaleX(1);
  }

  .feature-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    color: white;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1);
    box-shadow: 0 8px 20px rgba(255, 107, 157, 0.3);
  }

  .feature-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .feature-card p {
    color: var(--text-muted);
    line-height: 1.6;
    font-size: 1rem;
  }

  /* Social Proof Section */
  .social-proof-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--bg) 0%, var(--bg-alt) 100%);
    position: relative;
    overflow: hidden;
  }

  .social-proof-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: -20%;
    width: 40%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(79, 70, 229, 0.05) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  .social-proof-content {
    text-align: center;
  }

  .social-proof-content h3 {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 3rem;
    color: var(--text);
  }

  .creator-types {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .creator-type {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    background: var(--bg-alt);
    border-radius: var(--radius);
    transition: all 0.3s ease;
    border: 1px solid var(--border-light);
  }

  .creator-type:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    background: white;
  }

  .creator-type .creator-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    background: var(--bg-gradient);
    border-radius: 50%;
    margin-bottom: 1rem;
    color: white;
  }

  .creator-type span {
    font-weight: 500;
    color: var(--text);
    font-size: 0.95rem;
  }

  .social-proof-cta {
    margin-top: 3rem;
  }

  .social-proof-cta p {
    font-size: 1.25rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .social-proof-cta .cta-primary,
  .social-proof-cta .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Page Content Section */
  .page-content-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--bg-alt), var(--bg));
    position: relative;
  }

  .page-content-section .container {
    max-width: 900px;
  }

  :global(.page-content) {
    background: var(--bg);
    padding: 3rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-light);
    color: var(--text);
  }

  :global(.page-content h1),
  :global(.page-content h2),
  :global(.page-content h3) {
    color: var(--text) !important;
  }

  :global(.page-content p) {
    color: var(--text) !important;
  }

  :global(.page-content a) {
    color: var(--primary) !important;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .features-section {
      padding: 4rem 0;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .feature-card {
      padding: 2rem 1.5rem;
    }

    .feature-icon {
      width: 60px;
      height: 60px;
    }

    .creator-types {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .creator-type {
      padding: 1rem;
    }

    .creator-type .creator-icon {
      width: 40px;
      height: 40px;
    }

    :global(.page-content) {
      padding: 2rem;
    }

    .social-proof-cta .cta-primary,
    .social-proof-cta .cta-secondary {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .creator-types {
      grid-template-columns: 1fr;
    }

    .social-proof-section {
      padding: 3rem 0;
    }
  }
</style>
