    color: white;
    line-height: 1.1;
  }

  .about-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    opacity: 0.9;
    margin-bottom: 0;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 400px;
    height: 300px;
    object-fit: cover;
    border-radius: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .hero-image img:hover {
    transform: translateY(-5px) scale(1.02);
  }

  /* Page Content Section */
  .page-content-section {
    padding: 4rem 0;
    background: var(--bg);
  }

  .page-content-section .container {
    max-width: 800px;
  }

  :global(.page-content) {
    padding: 2rem;
  }

  :global(.page-content h1),
  :global(.page-content h2),
  :global(.page-content h3) {
    color: var(--text);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  :global(.page-content p) {
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

